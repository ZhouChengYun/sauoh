<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>
    <!-- 数据库驱动:选择你的本地硬盘上面的数据库驱动包-->
    <classPathEntry  location="D:\Develop\MySQL\Connector J 8.0\mysql-connector-java-8.0.18.jar"/>
    <context id="DB2Tables"  targetRuntime="MyBatis3Simple" defaultModelType="flat">

        <!-- 格式化java代码 -->
        <property name="javaFormatter" value="org.mybatis.generator.api.dom.DefaultJavaFormatter"/>
        <!-- 格式化XML代码 -->
        <property name="xmlFormatter" value="org.mybatis.generator.api.dom.DefaultXmlFormatter"/>

        <commentGenerator>
            <property name="suppressAllComments" value="true"/>
        </commentGenerator>
        <!--数据库链接URL，用户名、密码 -->
        <jdbcConnection driverClass="com.mysql.cj.jdbc.Driver"
                        connectionURL="jdbc:mysql://localhost/sauoh?allowPublicKeyRetrieval=true&amp;useSSL=false&amp;serverTimezone=UTC"
                        userId="sauohadmin" password="sauohadmin">
        </jdbcConnection>

        <!-- 生成模型的包名和位置-->
        <javaModelGenerator targetPackage="cn.sau.sauoh.entity" targetProject="src/main/java"/>
        <!-- 生成映射文件的包名和位置-->
        <sqlMapGenerator targetPackage="cn/sau/sauoh/repository" targetProject="src/main/java"/>
        <!-- 生成DAO的包名和位置-->
        <javaClientGenerator type="XMLMAPPER" targetPackage="cn.sau.sauoh.repository" targetProject="src/main/java"/>

        <!-- 要生成的表 tableName是数据库中的表名或视图名 domainObjectName是实体类名-->
        <table tableName="user" domainObjectName="User"/>
        <table tableName="patient" domainObjectName="Patient"/>
        <table tableName="medicine" domainObjectName="Medicine"/>
        <table tableName="medicine_order" domainObjectName="MedicineOrder"/>
        <table tableName="medical_record" domainObjectName="MedicalRecord"/>
        <table tableName="doctor" domainObjectName="Doctor"/>
        <table tableName="department" domainObjectName="Department"/>
    </context>
</generatorConfiguration>